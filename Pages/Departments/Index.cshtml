@page
@model AdminEmentor.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects[0].Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subjects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubjectID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubjectID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubjectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
